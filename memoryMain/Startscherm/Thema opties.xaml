                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.076"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Button Content="Thema kiezen" HorizontalAlignment="Left" Margin="5,1,0,0" VerticalAlignment="Top" Width="262" Height="70" Background="#FF5B5656" Foreground="White" FontSize="32" FontWeight="Bold" Click="Themakiezen" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2"/>
