            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="memory-logo.png" Stretch="Fill" Width="Auto" Height="Auto" Grid.Row="1" Margin="115,-118,86,60" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="2">
