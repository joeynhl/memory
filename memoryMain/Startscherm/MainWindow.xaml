<Window x:Class="Startscherm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Startscherm"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Grid Margin="0,0,-456.667,-141.667" Background="#3ada9a" Width="auto" Height="auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="274*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="371*"/>
        </Grid.RowDefinitions>
        <Canvas Margin="0,0,0,2274" Grid.RowSpan="2">
            <Image Source="memory-logo.png" Stretch="Fill" Canvas.Left="297" Canvas.Top="9"/>
            <Slider x:Name="slider" Canvas.Left="745" Width="91" ValueChanged="slider_ValueChanged" Maximum="1" Value="0.5" />
        </Canvas>
            
        <GroupBox Header="" HorizontalAlignment="Left" Height="265" Margin="502,58,0,0" Grid.Row="4" VerticalAlignment="Top" Width="214">
            <StackPanel VerticalAlignment="Bottom" Margin="33,0,32,21">
                <Button Foreground="White" Background="#666666" Content="Start spel" Width="137" Height="42" Click="startBtn"/>
                <Button Foreground="White" Background="#666666" Content="Hervatten"  Width="137" Height="42" Click="hervatten"/>
                <Button Foreground="White" Background="#666666" Content="Highscores" Width="137" Height="42" Click="Highscores_Click"/>
                <Button Foreground="White" Background="#666666" Content="Opties" Width="137" Height="42" Click="Button_Click"/>
                <Button Foreground="White" Background="#666666" Content="Afsluiten" Width="137" Height="42" Click="btnExit"/>
            </StackPanel>
        </GroupBox>
             <Button Content="Play" Width="75" Click="playMuziek_Click"/>
            <Button Content="Stop"  Width="75" Click="stopMuziek_Click" Margin="658,0,492,0"/>
    </Grid>
</Window>
