<Window x:Class="Startscherm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Startscherm"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStyle="None" Height="661.6" Width="980.8">

    <Grid Margin="0,0,-0.2,-0.4" Background="#3ada9a" Width="auto" Height="auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190*"/>
            <ColumnDefinition Width="601*"/>
            <ColumnDefinition Width="190*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="310.4"/>
            <RowDefinition Height="351.2"/>
        </Grid.RowDefinitions>

        <Image Source="memory-logo.png" Stretch="Fill" Margin="9.6,37,30.2,36.4" Grid.Column="1"/>
        <Slider x:Name="slider" ValueChanged="slider_ValueChanged" Maximum="1" Value="0.5" Margin="343.6,0,9.2,278.4" Grid.Column="1"/>

        <GroupBox Header="" HorizontalAlignment="Left" Height="265" Margin="175.6,4.6,0,0" VerticalAlignment="Top" Width="214" Grid.Column="1" Grid.Row="1">
            <StackPanel VerticalAlignment="Bottom" Margin="33,0,32,21">
                <Button Foreground="White" Background="#666666" Content="Start spel" Width="137" Height="42" Click="startBtn"/>
                <Button Foreground="White" Background="#666666" Content="Hervatten"  Width="137" Height="42" Click="hervatten"/>
                <Button Foreground="White" Background="#666666" Content="Highscores" Width="137" Height="42" Click="Highscores_Click"/>
                <Button Foreground="White" Background="#666666" Content="Opties" Width="137" Height="42" Click="Button_Click"/>
                <Button Foreground="White" Background="#666666" Content="Afsluiten" Width="137" Height="42" Click="btnExit"/>
            </StackPanel>
        </GroupBox>
        <Button Content="Play" Click="playMuziek_Click" Margin="456.6,0,1.2,278.4" Grid.Column="1"/>
        <Button Content="Stop" Click="stopMuziek_Click" Margin="67.8,0,118.8,278.4" Grid.Column="2"/>
    </Grid>
</Window>
