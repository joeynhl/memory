<Window x:Class="Startscherm.Highscores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Startscherm"
        mc:Ignorable="d"
        Title="Highscores" Height="450" Width="800">
    <Grid>
        <Label Content="Highscores" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="36"/>
        <DataGrid ItemsSource="{Binding}" AutoGenerateColumns="False" Margin="10,58,10,10" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naam 1" Binding="{Binding Naam1}"/>
                <DataGridTextColumn Header="Score 1" Binding="{Binding Score1}"/>
                <DataGridTextColumn Header="Naam 2" Binding="{Binding Naam2}"/>
                <DataGridTextColumn Header="Score 2" Binding="{Binding Naam2}"/>
                <DataGridTextColumn Header="Tijd" Binding="{Binding Tijd}"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
