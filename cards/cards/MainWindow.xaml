<Window x:Class="cards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cards"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <BitmapImage x:Key="openImage" UriSource="/images/goodestboi.jpg" />
        <BitmapImage x:Key="closedImage" UriSource="/images/sjekkie.jpg" />
    </Window.Resources>
    <Grid>

        <Canvas Width="800" Height="800" >
          


          <Rectangle
                x:Name="card"
      Grid.Row="3" Grid.Column="0"
      Width="300" Height="150"
      Stroke="MediumBlue" StrokeThickness="1"
      HorizontalAlignment="Left"
                MouseDown="Rectangle_MouseDown" Canvas.Left="272" Canvas.Top="162" >
                
                
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{StaticResource closedImage}"/>
                </Rectangle.Fill>
            </Rectangle>

            
    
        </Canvas>

    </Grid>
</Window>
